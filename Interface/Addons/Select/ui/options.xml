	<CheckButton name="SelectOptionsCheckButtonTemplate" inherits="UICheckButtonTemplate" virtual="true">
		<HitRectInsets>
			<AbsInset left="-2" right="-220" top="-2" bottom="-2"/>
		</HitRectInsets>
		<Scripts>
			<OnEnter>
                self.text:SetTextColor(1,1,1)
                self:GetParent().optionDescription:Show()
                self:GetParent().optionDescription.optionTitle:SetText(self.optionTitle or "")
                self:GetParent().optionDescription.optionText:SetText(self.optionText or "")
			</OnEnter>
			<OnLeave>
                self.text:SetTextColor(1,0.82,0)
                self:GetParent().optionDescription:Hide()
			</OnLeave>
			<OnLoad>
                self.text:SetFontObject("GameFontNormal")
                if self.optionTitle then
                    self.text:SetText(self.optionTitle)
                end
			</OnLoad>
			<OnClick>
				SelectOptionsPanel.CheckButtonOnClick(self,button)
			</OnClick>
		</Scripts>
	</CheckButton>

