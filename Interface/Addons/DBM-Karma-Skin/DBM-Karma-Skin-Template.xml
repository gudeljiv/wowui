<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Frame name="DBM-Karma-Skin-Template" virtual="true" frameStrata="MEDIUM" topLevel="true">
		<Size>
			<AbsDimension x="195" y="20"/>
		</Size>
		<Frames>
			<StatusBar name="$parentBar">
				<Size>
					<AbsDimension x="195" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER" relativePoint="CENTER">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentBackground">
							<Color r="0" g="0" b="0" a="1"/>
							<Anchors>
								<Anchor point="CENTER" relativePoint="CENTER">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
								 <Anchor point="LEFT" relativePoint="LEFT">
   									<Offset><AbsDimension x="-2" y="2"/></Offset>
 								</Anchor>
							 	<Anchor point="RIGHT" relativePoint="RIGHT">
   									<Offset><AbsDimension x="2" y="2"/></Offset>
  								</Anchor>
							 	<Anchor point="TOP" relativePoint="TOP">
   									<Offset><AbsDimension x="2" y="2"/></Offset>
  								</Anchor>
							 	<Anchor point="BOTTOM" relativePoint="BOTTOM">
   									<Offset><AbsDimension x="2" y="-2"/></Offset>
  								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<Texture name="$parentSpark" file="Interface\AddOns\DBM-Core\textures\Spark.blp" alphaMode="ADD">
							<Size>
								<AbsDimension x="0" y="0"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<FontString name="$parentTimer" inherits="GameFontHighlightSmall" text="">
							<Anchors>
								<Anchor point="RIGHT" relativePoint="RIGHT">
									<Offset>
										<AbsDimension x="0" y="13"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentName" inherits="GameFontHighlightSmall" justifyH="LEFT" text="" wordwrap="false">
							<Anchors>
     								<Anchor point="LEFT" relativePoint="LEFT">
									<Offset>
										<AbsDimension x="0" y="11"/>
									</Offset>
								</Anchor>
								<Anchor point="RIGHT" relativeTo="$parentTimer" relativePoint="LEFT">
									<Offset>
										<AbsDimension x="-7" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>						
						<Texture name="$parentIcon1">
							<Size>
								<AbsDimension x="22" y="22"/>
							</Size>
							<Anchors>
								<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="-5" y="-2"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<Texture name="$parentIcon2">
							<Size>
								<AbsDimension x="20" y="20"/>
							</Size>
							<Anchors>
								<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="-5" y="-2"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture name="BorderLeft" file="Interface\AddOns\DBM-Karma-Skin\textures\Normal.tga" level="TOP">
							<Size>
								<AbsDimension x="22" y="22"/>
							</Size>
							<Color r="0" g="0" b="0" a="1"/>
							<Anchors>
								<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="-5" y="-2"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<BarTexture name="$parentTexture" file="Interface\AddOns\DBM-Karma-Skin\textures\default.tga"/>
				<BarColor r="1.0" g="0.7" b="0.0"/>
			</StatusBar>
		</Frames>
	</Frame>
</Ui>